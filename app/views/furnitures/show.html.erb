<% content_for :page_title do %>
  Furnitures
<% end %>

<% content_for :page_header do %>
  <%= render 'pages/header' %>
<% end %>

<% content_for :page_content do %>
    <section id="content">
        <div class="container">
            <div class="card-panel">
                <div class="row">
                    <div class="col s12 m6">
                        <h4><%= @furniture.name %></h4>
                        <p><%= @furniture.price %></p>
                        <p><%= @furniture.description %></p>
                        <% if current_user.admin? %>
                            <%= link_to 'Edit', edit_restaurant_path(@furniture), class: "btn white red-text text-darken-2" %>
                            <%= link_to 'Delete', @furniture, method: :delete, data: {confirm: 'Are you sure?'}, class: "btn white red-text text-darken-2" %>
                        <% end %>
                    </div>
                </div>
                <div class="row">
                </div>
            </div>
            <%= render partial: 'transaksi/form', locals: { transaksi: Transaksi.new, furniture: @furniture } %>
        </div>
    </section>
<% end %>

<%= render template: 'layouts/pages' %>